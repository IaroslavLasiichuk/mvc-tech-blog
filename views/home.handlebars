<div class="container justify-content-center">
{{#each blogs as |blog|}}
  <div class="card text-center m-4">
    <div class="card-header">
      {{blog.blog_title}}
    </div>
    <div class="card-body">
      <h5 class="card-title">{{blog.blog_title}}</h5>
      <p class="card-text">{{blog.blog_content}}</p>
    </div>
    <div class="card-footer text-body-secondary">
      Created on: {{blog.blog_created}}
    </div>
    <div class="card card-body">
      <textarea name="comment" id="text-{{blog.id}}" cols="30" rows="3"></textarea>
       <div id="comment-list-{{blog.id}}"></div>
    </div>
  </div>
   <button class="btn btn-primary mt-2" data-comment="{{blog.id}}">Comment</button>
{{/each}}
</div>
