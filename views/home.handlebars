{{#each blogs as |blog|}}
  <div class="card text-center m-4">
    <div class="card-header">
      {{blog.blog_title}}
    </div>
    <div class="card-body">
      <h5 class="card-title">{{blog.blog_title}}</h5>
      <p class="card-text">{{blog.blog_content}}</p>
      <a class="btn btn-primary" href="/edit/{{blog.id}}">Edit post</a>
    </div>
    
    <div class="card-footer text-body-secondary">
      Created on: {{blog.blog_created}}
    </div>


    <div class="card card-body">
       <div id="comment-list-{{blog.id}}"></div>
      <textarea class="form-control add-comment"  id="comment-{{blog.id}}" rows="3" placeholder="Add comment..."></textarea>
    </div>
  
    <a class="btn btn-success btn-comment m-2" data-comment="{{blog.id}}">
      Add Comment
    </a>
 

  <div class="card card-body">
       <div id="comment-list-{{id}}"></div>
    </div>


  </div>
{{/each}}
